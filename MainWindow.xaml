<Window x:Class="LineGame_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LineGame_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="GameGrid" Background="White">
        
           
        
            <TextBox Name="txtResult" VerticalAlignment="Center"                   
                HorizontalAlignment="Center"
                Margin="10,10,30,10" 
                FontSize="85" Grid.Row="0"
                IsReadOnly="True"
                Visibility="Hidden"
                TextAlignment="Center" Background="White" FontFamily="Script MT Bold" 
                
                Panel.ZIndex="1"
            >
            </TextBox>
        
       
    </Grid>
    
   
</Window>
